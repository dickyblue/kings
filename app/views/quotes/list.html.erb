<h4>List of Quotes</h4></br>

<div class="display-inline">
  <%= link_to "«« Back to Admin »»", admins_path %>

  <div>
    <%= search_form_for @search, :url => list_quotes_path do |f| %>
      Keyword Search: <%= f.search_field :author_or_quote_cont, :label => false %>
      SORT BY: <%= f.sort_link :id, "ID Order" %>
    <% end %>
  </div>
</div>

<table class="table zebra-striped">
  <thead>
    <tr>
      <th>ID #</th>
      <th>Quote</th>
      <th>Author</th>
      <th>Type</th>      
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |q| %>
    <tr>
      <td><%= q.id %></td>
      <td><%= truncate(q.quote, :length => 50, :separator => " ") %></td>
      <td><%= q.author %></td>
      <td>
        <% if q.travel %>
          Travel
        <% elsif q.food %>
          Food
        <% else %>
        <% end %>
      </td>
      <td><%= link_to "Edit", :action => 'manage', :id => q.id %> | <%= link_to "Delete", q, :method => :delete %></td>        
     </tr>
    <% end %>
  </tbody>  

</table>

<div class="pull-right"><%= will_paginate @quotes, renderer: BootstrapPagination::Rails %></div>    


<div class="btn primary white-link pull-right"><%= link_to "New", :action => 'manage' %></div>
