$('.tab-pane.active').append('<%= j render(@image_type, images: @images) %>');
<% if @images.next_page %>
  $('.tab-pane.active .pagination').replaceWith('<%= j will_paginate(@images, image_type: @image_type) %>');
  $('.tab-pane.active .pagination').hide();
<% else %>
  $('.tab-pane.active .pagination').remove();
<% end %>