<% images.each do |w| %>
<ul class="index-gal-grid list-group">
  <li class="index-gal-li">
  <%= image_tag(w.image_url(:thumb_2)) if w.image %><br>
    <div class="index-gal-text">
      <h4 class="gallery-title"><%= w.name %></h4>
      <p class="gallery-text"><%= w.description %></p>
      <% if current_user && current_user.admin %><p class="edit-gallery"><%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_gallery_path(w) %></p><% end %>
      <p class="enlarge-fancybox"><%= link_to '<i class="glyphicon glyphicon-zoom-in"></i>'.html_safe, w.image_url(:slide_gallery), { :class => "fancybox", :rel => "#{images}", :title => "#{w.description}" } %></p>
    </div>
  </li>
</ul>
<% end %>





