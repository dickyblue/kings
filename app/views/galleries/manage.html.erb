<%= semantic_form_for(@image, :html => {:multipart => true}) do |f| %>
  <%= f.inputs do %>
    <%= f.input :image %>
    <%= f.input :description %>
    <%= f.input :featured, :as => :select %>
    <%= f.input :lodging, :as => :select %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button :button_html => {:class => "primary"} %>
  <% end %>
<% end %>