<%= simple_form_for(@image, :html => {:multipart => true}) do |f| %>
    <%= f.input :image %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :featured, :as => :select %>
    <%= f.input :lodging, :as => :select %>
    <%= f.input :engagement, :as => :select %>
    <%= f.input :wedding_cruise, :as => :select %>
    <%= f.input :wedding, :as => :select %>
    <%= f.button :submit, :class => "primary" %>
<% end %>