<div class="container">

  <div class="white-box">
    <div class="row">
      <div class="span2">
        <%= travel_stamp %>
      </div>
      
      <div class="span9">
        <h3><%= @food_blog.title %></h3>
        Posted By: <%= @food_blog.user.name %>  |  Dated: <%= @food_blog.publish_date.strftime("%B %d, %Y") if @food_blog.publish_date %> 
      </div>
    </div>
    
    <div class="row">
      <div class="span12 center-travel-image">
        
        <%= @food_blog.content %><br><br>
      </div>
        
      <% @food_blog.food_images.each do |f| %>
      <div class="span12 center-travel-image">
        <%= image_tag(f.image_url(:large)) if f.image %><br>
        <em style="font-size: 12px"><strong><%= f.name %>: </strong><%= f.description %></em>
      </div><br><br>
      <% end %>
        
    </div>
    
      <% if @food_blog.recipe == true %>        
        <% @food_blog.recipes.each do |r| %>
          <div class="tape-background">
            <p class="mathlete-bulky-font" style="font-size: 35px;"><%= r.name %></p>
            <div class="span4">
              <% r.ingredients.each do |i| %>
                  <p class="mathlete-bulky-font" style="font-size: 35px;">Ingredients:</p>  
                  <ul class="no-margin-or-bullet">
                    <li>  
                      <%= i.quantity_used %>
                      <%= i.ingredient_name %>
                    </li>
                  </ul>              
              <% end %>
            </div>

            <div class="span6" style="margin-left: 50px;">
              <p class="mathlete-bulky-font" style="font-size: 35px;">Recipe:</p>
              <%= r.recipe_instructions %>
            </div>
          </div>
        <% end %>
      <% end %>
      
      
    <br><br><br>
    
    <div class="row">
      <div class="span12">
        <h5 class="mathlete-bulky-font" style="font-size:28px">Leave a comment</h5>
        <%= simple_form_for @comment, :url => create_travel_comment_path, :method => :post, :html => {:class => 'form-horizontal'} do |f| %>  
            <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
            <%= f.input :commenter, :as => :hidden, :input_html => { :value => current_user.name } %>
            <%= f.input :food_id, :as => :hidden, :input_html => { :value => @food_blog.id } %>
            <%= f.input :content, :label => "Comment", :input_html => { :rows => 6, :class => "input-xxlarge" } %>
          <div class="submit-btn-pull-right"><%= f.button :submit, 'Submit', :class => "primary" %></div>
        <% end %>
      </div>  
    </div>
    
        
    <div class="row">
      <div class="span12">
        <a name="comments"></a>
        <h5 class="mathlete-bulky-font" style="font-size:28px"><%= pluralize(@food_blog.comments.size - 1 , 'Comment') %></h5><br>
        <% @comments.each do |comment| %>
          <div class="span2">
            <ul class="no-margin-or-bullet">        
              <li><strong><%= comment.commenter %></strong><br>
              <p style="font-size: 12px; font-style: italic"><%= comment.created_at.strftime("%b %d, %Y")%></p></li>
            </ul>
          </div>

          <div class="span9">
            <ul class="no-margin-or-bullet">
              <li><%= comment.content %></li><br>
            </ul>
          </div>
          
        <% end %>
      </div>  
    </div>

    
    
  </div>  
</div>