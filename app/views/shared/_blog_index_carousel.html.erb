<div class="carousel slide" id="myCarousel">
<div class="carousel-inner thumb-carousel-height">
  <div class="item active">
        <ul class="thumbnails">
                <% @featured_blogs_one.each do |fb| %>
                <li class="index-pages-li">
                <%= link_to image_tag(the_model.featured_image(fb).first.image_url(:list)), fb if the_model.featured_image(fb).first %>                 
                <span class="index-pages-li-title"><%= link_to fb.title, fb %></span>
              </li>

                <% end %>
        </ul>
  </div>
  <div class="item">
        <ul class="thumbnails">
            <% @featured_blogs_two.each do |fb| %>
            <li class="index-pages-li">

            <%= link_to image_tag(the_model.featured_image(fb).first.image_url(:list)), fb if the_model.featured_image(fb).first %>
            <span class="index-pages-li-title"><%= link_to fb.title, fb %></span>
            </li>
            <% end %>
        </ul>
  </div>
</div>
<a data-slide="prev" href="#myCarousel" class="left carousel-control">‹</a>
<a data-slide="next" href="#myCarousel" class="right carousel-control">›</a>
</div>
