<div class="container">

  <div class="white-box">
    <div class="row">
      <div class="span2">
        <%= travel_stamp %>
      </div>
      
      <div class="span9">
        <h3><%= @travel_blog.title %></h3>
        Posted By: <%= @travel_blog.user.name %>  |  Dated: <%= @travel_blog.publish_date.strftime("%B %d, %Y") if @travel_blog.publish_date %> 
      </div>
    </div>
    
    <div class="row">
      <div class="span11 center-travel-image">
        <%= image_tag(@featured_image.first.image_url(:index)) %><br>
        <em style="font-size: 12px"><strong><%= @featured_image.first.name %>: </strong><%= @featured_image.first.description %></em><br><br>
        <%= simple_format(@travel_blog.content) %><br><br>
      </div>  
      
      
      <% @all_but_featured_image.each do |f| %>
      <div class="span11 center-travel-image">
        <%= image_tag(f.image_url(:large)) if f.image %><br>
        <em style="font-size: 12px"><strong><%= f.name %>: </strong><%= f.description %></em>
      </div>
      <% end %>  
    </div>
    
    <br><br><br>
    
    <div class="row">
      <div class="span12">
        <h5 class="mathlete-bulky-font" style="font-size:28px">Leave a comment</h5>
        <%= simple_form_for @comment, :url => create_travel_comment_path, :method => :post, :html => {:class => 'form-horizontal'} do |f| %>  
            <%= f.input :travel_id, :as => :hidden, :input_html => { :value => @travel_blog.id } %>
            <%= render :partial => "shared/comment_form", :locals => {f: f} %>
          <div class="submit-btn-pull-right"><%= f.button :submit, 'Submit', :class => "primary" %></div>
        <% end %>
      </div>  
    </div>
    
        
    <div class="row">
      <div class="span11">
        <a name="comments"></a>
        <h5 class="mathlete-bulky-font" style="font-size:28px"><%= pluralize(@travel_blog.comments.size - 1 , 'Comment') %></h5><br>
        <% @comments.each do |comment| %>
        <div class="row">
          <div class="span3">
            <ul class="no-margin-or-bullet">        
              <li>
                <span style="float: left; margin-right: 5px"><%= image_tag(comment.user.image_url(:sm_thumb))%></span>
                <span style="font-size: 14px; font-weight: bold; float: left; color: #65BEB4"><%= comment.commenter %></span><br>
                <span style="font-size: 12px; font-style: italic; float: left"><%= comment.created_at.strftime("%b %d, %Y")%></span>
              </li>
            </ul>
          </div>

          <div class="span8">
            <ul class="no-margin-or-bullet">
              <li><%= comment.content %></li><br>
            </ul>
          </div>
        </div><br>  
        <% end %>
      </div>  
    </div>

    
    
  </div>  
</div>