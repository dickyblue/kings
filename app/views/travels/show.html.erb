<div class="container">

  <div class="white-box">
    <div class="row">
      <div class="span2">
        <%= travel_stamp %>
      </div>
      
      <div class="span9">
        <h3><%= @travel_blog.title %></h3>
        Posted By: <%= @travel_blog.user.name %>  |  Dated: <%= @travel_blog.publish_date.strftime("%B %d, %Y") if @travel_blog.publish_date %> 
      </div>
    </div>
    
    <div class="row">
      <div class="span12 center-travel-image">
        <%= @travel_blog.content %><br><br>
      </div>  
      
      
      <% @travel_blog.travel_images.each do |f| %>
      <div class="span12 center-travel-image">
        <%= image_tag(f.image_url(:large)) if f.image %><br>
        <em style="font-size: 12px"><strong><%= f.name %>: </strong><%= f.description %></em>
      </div>
      <% end %>  
    </div>
    
    <br><br><br>
    
    <div class="row">
      <div class="span12">
        <h5 class="mathlete-bulky-font" style="font-size:28px">Leave a comment</h5>
        <%= simple_form_for @comment, :url => create_travel_comment_path, :method => :post, :html => {:class => 'form-horizontal'} do |f| %>  
            <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
            <%= f.input :commenter, :as => :hidden, :input_html => { :value => current_user.name } %>
            <%= f.input :travel_id, :as => :hidden, :input_html => { :value => @travel_blog.id } %>
            <%= f.input :content, :label => "Comment", :input_html => { :rows => 6, :class => "input-xxlarge" } %>
          <div class="pull-right"><%= f.button :submit, 'Submit', :class => "primary" %></div>
        <% end %>
      </div>  
    </div>
    
        
    <div class="row">
      <div class="span12">
        <a name="comments"></a>
        <h5 class="mathlete-bulky-font" style="font-size:28px"><%= pluralize(@travel_blog.comments.size - 1 , 'Comment') %></h5><br>
        <% @comments.each do |comment| %>
          <div class="span2">
            <ul class="no-margin-or-bullet">        
              <li><strong><%= comment.commenter %></strong><br>
              <p style="font-size: 12px; font-style: italic"><%= comment.created_at.strftime("%b %d, %Y")%></p></li>
            </ul>
          </div>

          <div class="span9">
            <ul class="no-margin-or-bullet">
              <li><%= comment.content %></li><br>
            </ul>
          </div>
          
        <% end %>
      </div>  
    </div>

    
    
  </div>  
</div>